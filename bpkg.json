{
  "name": "op-bash-example",
  "version": "0.0.0",
  "description": "Operator Framework Bash backend example",
  "license": "MIT",
  "commands": {
    "lint": "command shellcheck build.sh bin/* src/*.sh",
    "build": "op .",
    "start": "op . -r -o",
    "clean": "rm -rf build/",
    "watch": "bin/watch",
    "ipc": "bin/ipc $@"
  },
  "scripts": [
    "bin/ipc",
    "bin/stdin",
    "bin/watch",
    "src/main.sh",
    "build.sh"
  ],
  "files": [
    "operator.config",
    "src/index.html",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
  }
}

